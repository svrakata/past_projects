{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ {
      "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      },
      {
        "key" : "Cache-Control",
        "value" : "max-age=3334500"
      } ]
    }, {
      "source" : "**/*.@(jpg|jpeg|gif|png|svg)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=3334500"
      } ]
    }, {
      "source" : "**/*.@(css|html|js)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=3334500"
      } ]
    } ]
  }
}
