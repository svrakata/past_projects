extends layout/main
append head
	link(rel="stylesheet", href="/static/css/news-list.css")
	title Search news | Get Sober fast
append main
	if news.length > 0   
		.container.sub-news
			.row
				.category-title
					h3#categoryHeader Result for "#{query}":
				each val in news
					.col-sm-6.col-xs-12.col-md-3.news-middle-thumbnail
						a(href=`/articles?id=${val._id}`)
							.hover-cover
							if val.fields.thumbnail
								img(src= val.fields.thumbnail, alt='')
							else
								img(src='./../static/imgs/defaultArticle.png', alt='')
							h2= val.fields.headline
							p!= val.fields.trailText
	else
		.container.sub-news
			.row
				.category-title
					h3#categoryHeader No results for "#{query}"