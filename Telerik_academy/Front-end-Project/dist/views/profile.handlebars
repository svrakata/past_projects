<div class="container">

    <div class="row">

        <div class="col-sm-8 col-sm-offset-2 profile">

            <div class="profile__img-wrapper">
                <img src="{{imageUrl}}" alt="" class="profile__img">
            </div>

            <div class="profile-user-info">

                <h1 class="profile-user-info__username">{{username}}</h1>

                <h2 class="profile-user-info__email">{{email}}</h2>

            </div>

            <div class="form-group profile-upload-form" >

                <label class="btn btn-primary" for="profile-upload-form__input">
                    <input id="profile-upload-form__input" type="file" accept="image/x-png,image/gif,image/jpeg" /> Upload Picture
                </label>
                
            </div>

        </div>

    </div>

</div>


